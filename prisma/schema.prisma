generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  Todo
  Progress
  Done
}

enum Priority {
  Minor
  Low
  Moderate
  Important
  Critical
}

model Task {
  id          String   @id @default(cuid())
  description String
  priority    Priority @default(Minor)
  status      Status   @default(Todo)
  dueDate     DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("tasks")
}